<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.e.uvsafeaustralia">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.UVSafeAustralia">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DBUploadActivity"
            android:parentActivityName=".MainActivity"></activity>

        <activity android:name=".SlideActivity"
            android:parentActivityName=".MainActivity"
            android:label="Introduction"></activity>

        <activity android:name=".MainFunction"
            android:parentActivityName=".SlideActivity"></activity>

        <activity android:name=".LocationActivity"
            android:parentActivityName=".MainFunction"
            android:label="Search Location"></activity>

        <activity android:name=".AboutUVActivity"
            android:parentActivityName=".MainFunction"
            android:label="About UV"></activity>

        <activity android:name=".AboutSunscreensActivity"
            android:parentActivityName=".MainFunction"
            android:label="About Sunscreens"></activity>

        <activity android:name=".ProtectionActivity"
            android:parentActivityName=".MainFunction"
            android:label="Sun Protection"></activity>

        <receiver android:name=".AlarmReceiver"/>
    </application>

</manifest>