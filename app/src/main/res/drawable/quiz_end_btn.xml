<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom 10px Shadow -->
    <item>
        <shape  android:shape="rectangle">

            <solid android:color="#9D4D02" />
            <corners android:radius="6dp" />
            <size android:width="95dp" android:height="55dp"/>
        </shape>
    </item>



    <!-- White  color -->
    <item android:bottom="10dp" android:right="10dp" android:top="10dp" android:left="10dp">

        <shape  android:shape="rectangle">

            <solid android:color="#FFFDFB" />
            <corners android:radius="6dp" />
            <size android:width="110dp" android:height="45dp"/>

        </shape>

    </item>

</layer-list>