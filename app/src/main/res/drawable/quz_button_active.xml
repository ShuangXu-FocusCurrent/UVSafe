<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom 10px Shadow -->
    <item>
        <shape  android:shape="rectangle">

            <solid android:color="#9D4D02" />
            <corners android:radius="6dp" />
            <size android:width="46dp" android:height="55dp"/>
        </shape>
    </item>



    <!-- White  color -->
    <item android:bottom="5dp" android:right="5dp" android:top="5dp" android:left="5dp">

        <shape  android:shape="rectangle">

            <solid android:color="#FFFDFB" />
            <corners android:radius="6dp" />
            <size android:width="37dp" android:height="44dp"/>

        </shape>

    </item>
</layer-list>