<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30dp"
        android:background="@drawable/edu_sun_main_bg">

        <TextView
            android:id="@+id/edu_sun_main_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_weight="1"
            android:fontFamily="@font/concert_one"
            android:gravity="center"
            android:text="Sun Protection"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <VideoView
            android:id="@+id/edu_sun_main_video_view"
            android:layout_width="wrap_content"
            android:layout_height="170dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/edu_sun_main_video_source"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/concert_one"
            android:text="Source: url" />

        <ImageView
            android:id="@+id/edu_sun_main_image"
            android:layout_width="wrap_content"
            android:layout_height="176dp"
            android:layout_weight="1"
            android:layout_marginBottom="30dp"
            app:srcCompat="@drawable/edu_sun_main_image" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/edu_sun_main_button"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Click Me to See  Sun Protective Measurements"
            android:textColor="#FBBC05 "
            android:textSize="15sp"
            app:cornerRadius="15dp"
            app:backgroundTint="@color/white"
            app:strokeColor="#C8D2DC"
            app:strokeWidth="2dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>