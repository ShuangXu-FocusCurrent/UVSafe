<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.quiz.Category2.Q1Category2Fragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="q1_category2"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="-126dp" />

        <Button
            android:id="@+id/buttonCat2Q1"
            android:layout_width="68dp"
            android:layout_height="49dp"
            android:text="Q1"
            app:layout_constraintBottom_toBottomOf="@+id/buttonCat2Q2"
            app:layout_constraintEnd_toStartOf="@+id/buttonCat2Q2"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/buttonCat2Q2"
            app:layout_constraintVertical_bias="0.6" />

        <Button
            android:id="@+id/buttonCat2Q2"
            android:layout_width="68dp"
            android:layout_height="44dp"
            android:text="Q2"
            app:layout_constraintBottom_toBottomOf="@+id/buttonCat2Q3"
            app:layout_constraintEnd_toStartOf="@+id/buttonCat2Q3"
            app:layout_constraintTop_toTopOf="@+id/buttonCat2Q3"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/buttonCat2Q3"
            android:layout_width="70dp"
            android:layout_height="45dp"
            android:text="Q3"
            app:layout_constraintBottom_toBottomOf="@+id/buttonCat2Q4"
            app:layout_constraintEnd_toStartOf="@+id/buttonCat2Q4"
            app:layout_constraintTop_toTopOf="@+id/buttonCat2Q4" />

        <Button
            android:id="@+id/buttonCat2Q4"
            android:layout_width="78dp"
            android:layout_height="47dp"
            android:text="Q4"
            app:layout_constraintBottom_toBottomOf="@+id/buttonCat2End"
            app:layout_constraintEnd_toStartOf="@+id/buttonCat2End"
            app:layout_constraintTop_toTopOf="@+id/buttonCat2End"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/buttonCat2End"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="184dp"
            android:text="End"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonOpt3Answer"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/buttonOpt1Answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="AnswerOpt1"
            app:backgroundTint="#FFCCCCCC"
            app:layout_constraintEnd_toEndOf="@+id/textViewCat2Q1"
            app:layout_constraintStart_toStartOf="@+id/textViewCat2Q1"
            app:layout_constraintTop_toBottomOf="@+id/textViewCat2Q1" />

        <Button
            android:id="@+id/buttonOpt2Answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="AnswerOpt2"
            app:backgroundTint="#FFCCCCCC"
            app:layout_constraintEnd_toEndOf="@+id/buttonOpt1Answer"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/buttonOpt1Answer"
            app:layout_constraintTop_toBottomOf="@+id/buttonOpt1Answer" />

        <TextView
            android:id="@+id/textViewCat2Q1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="Question"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/buttonOpt3Answer"
            android:layout_width="142dp"
            android:layout_height="53dp"
            android:layout_marginTop="30dp"
            android:text="AnswerOpt3"
            app:backgroundTint="#FFCCCCCC"
            app:layout_constraintEnd_toEndOf="@+id/buttonOpt2Answer"
            app:layout_constraintStart_toStartOf="@+id/buttonOpt2Answer"
            app:layout_constraintTop_toBottomOf="@+id/buttonOpt2Answer" />

    </androidx.constraintlayout.widget.ConstraintLayout>




</FrameLayout>