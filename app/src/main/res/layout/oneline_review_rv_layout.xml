<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/onelineReviewRvLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/rev_q_bcg_2"
        android:layout_width="379dp"
        android:layout_height="329dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rev_q_bcg_2" />

    <ImageView
        android:id="@+id/verticle_line"
        android:layout_width="45dp"
        android:layout_height="230dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout"
        app:layout_constraintStart_toStartOf="@+id/rev_q_bcg_2"
        app:layout_constraintTop_toTopOf="@+id/rev_q_bcg_2"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/verticle_line" />

    <TextView
        android:id="@+id/quetionNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/concert_one"
        android:text="1"
        android:textColor="#2C2A2A"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/verticle_line"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <TextView
        android:id="@+id/question"
        android:layout_width="306dp"
        android:layout_height="31dp"
        android:layout_marginStart="12dp"
        android:fontFamily="@font/concert_one"
        android:gravity="fill_horizontal"
        android:text="Question"
        android:textColor="#2C2A2A"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/verticle_line"
        app:layout_constraintTop_toTopOf="@+id/quetionNumber" />

    <ImageView
        android:id="@+id/status"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toStartOf="@+id/verticle_line"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="@+id/rev_q_bcg_2"
        app:layout_constraintTop_toBottomOf="@+id/quetionNumber"
        tools:srcCompat="@tools:sample/avatars" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/rev_q_bcg_2"
        app:layout_constraintHorizontal_bias="0.136"
        app:layout_constraintStart_toStartOf="@+id/verticle_line"
        app:layout_constraintTop_toBottomOf="@+id/question">

        <Button
            android:id="@+id/buttonAnswerOpt1"
            android:layout_width="253dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/concert_one"
            android:gravity="start|fill_horizontal|center_vertical"
            android:text="AnswerOpt1"
            android:textColor="#756861"
            android:textSize="14dp"
            app:backgroundTint="#FFFFFF"
            app:cornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="#95404040"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/buttonAnswerOpt2"
            android:layout_width="253dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/concert_one"
            android:gravity="start|fill_horizontal|center_vertical"
            android:text="AnswerOpt2"
            android:textColor="#756861"
            android:textSize="14dp"
            app:backgroundTint="#FFFFFF"
            app:cornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="@+id/buttonAnswerOpt1"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/buttonAnswerOpt1"
            app:layout_constraintTop_toBottomOf="@+id/buttonAnswerOpt1"
            app:strokeColor="#95404040"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/buttonAnswerOpt3"
            android:layout_width="253dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/concert_one"
            android:gravity="start|fill_horizontal|center_vertical"
            android:text="AnswerOpt3"
            android:textColor="#756861"
            android:textSize="14dp"
            app:backgroundTint="#FFFFFF"
            app:cornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="@+id/buttonAnswerOpt2"
            app:layout_constraintStart_toStartOf="@+id/buttonAnswerOpt2"
            app:layout_constraintTop_toBottomOf="@+id/buttonAnswerOpt2"
            app:strokeColor="#95404040"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/buttonAnswerOpt4"
            android:layout_width="253dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/concert_one"
            android:gravity="start|fill_horizontal|center_vertical"
            android:text="AnswerOpt4"
            android:textColor="#756861"
            android:textSize="14dp"
            app:backgroundTint="#FFFFFF"
            app:cornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="@+id/buttonAnswerOpt3"
            app:layout_constraintStart_toStartOf="@+id/buttonAnswerOpt3"
            app:layout_constraintTop_toBottomOf="@+id/buttonAnswerOpt3"
            app:strokeColor="#95404040"
            app:strokeWidth="2dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/rev_q_bcg_3"
        android:layout_width="370dp"
        android:layout_height="85dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="@+id/rev_q_bcg_2"
        app:layout_constraintHorizontal_bias="0.133"
        app:layout_constraintStart_toStartOf="@+id/rev_q_bcg_2"
        app:layout_constraintTop_toBottomOf="@+id/verticle_line"
        app:srcCompat="@drawable/rev_q_bcg_3" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/concert_one"
        android:text="Explanation:"
        android:textColor="#2C2A2A"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/rev_q_bcg_3"
        app:layout_constraintTop_toTopOf="@+id/rev_q_bcg_3" />

    <TextView
        android:id="@+id/explain"
        android:layout_width="349dp"
        android:layout_height="39dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/concert_one"
        android:text="TextView"
        android:textColor="#2C2A2A"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/rev_q_bcg_3"
        app:layout_constraintHorizontal_bias="0.037"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/concert_one"
        android:text="Q"
        android:textColor="#2C2A2A"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/rev_q_bcg_2"
        app:layout_constraintTop_toTopOf="@+id/rev_q_bcg_2" />

</androidx.constraintlayout.widget.ConstraintLayout>