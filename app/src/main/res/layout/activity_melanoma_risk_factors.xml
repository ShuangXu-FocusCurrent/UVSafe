<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.MelanomaRiskFactorsActivity">

    <ImageView
        android:id="@+id/top_background"
        android:layout_width="392dp"
        android:layout_height="150dp"
        android:layout_marginTop="24dp"
        android:layout_weight="10"
        app:layout_constraintBottom_toTopOf="@+id/scrollView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mrf_background_top" />

    <ImageView
        android:id="@+id/bottom_background"
        android:layout_width="392dp"
        android:layout_height="150dp"
        android:layout_weight="10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="520dp"
        app:srcCompat="@drawable/mrf_backgound_bottom" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="391dp"
        android:layout_height="655dp"
        android:scrollbarStyle="insideInset"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_1_causes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/concert_one"
                android:text="Causes of Melanoma"
                android:textColor="#D60000"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/underline_1"
                android:layout_width="wrap_content"
                android:layout_height="143dp"
                android:layout_marginTop="-70dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="-14dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/underline" />

            <ImageView
                android:id="@+id/background_1"
                android:layout_width="wrap_content"
                android:layout_height="143dp"
                android:layout_marginLeft="31dp"
                android:layout_marginTop="-80dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/mrf_background_1" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="182dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/concert_one"
                android:gravity="center"
                android:text="Learn how skin colour can be a risk factor of Melanoma"
                android:textColor="#493031"
                android:textSize="18sp"
                android:layout_marginLeft="71dp"
                android:layout_marginTop="-115dp"
                android:layout_marginBottom="10dp"/>

            <ImageView
                android:id="@+id/doctor_2"
                android:layout_width="334dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="-115dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/doctor_2" />

            <ImageView
                android:id="@+id/skin_info"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="-10dp"
                android:layout_marginBottom="0dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/skin_info_1" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="274dp"
                android:layout_height="47dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/concert_one"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:text="Not only your skin colour.. Here are some other factors"
                android:textColor="#A30606"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/risk_factors_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/risk_factors_backgorund" />

            <ImageView
                android:id="@+id/risk_factors_background_2"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:layout_marginLeft="-229dp"
                android:layout_marginTop="-95dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/risk_factor_bcg_2" />

            <ImageView
                android:id="@+id/sun"
                android:layout_width="308dp"
                android:layout_height="76dp"
                android:layout_marginLeft="-75dp"
                android:layout_marginTop="-90dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/sun" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="224dp"
                android:layout_height="87dp"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="-80dp"
                android:layout_weight="1"
                android:fontFamily="@font/abel"
                android:gravity="fill"
                android:text="Overexposure to UV radiation:
particularly a pattern of short, intense periods of sun exposure and sunburn, such as on weekends and holidays"
                android:textColor="#000000"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/risk_factors_background2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="15dp"
                app:srcCompat="@drawable/risk_factors_backgorund" />

            <ImageView
                android:id="@+id/risk_factors_background2_1"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:layout_marginLeft="-229dp"
                android:layout_marginTop="-95dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/risk_factor_bcg_2" />

            <ImageView
                android:id="@+id/spots"
                android:layout_width="308dp"
                android:layout_height="76dp"
                android:layout_marginLeft="-75dp"
                android:layout_marginTop="-90dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/spots" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="224dp"
                android:layout_height="87dp"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="-80dp"
                android:layout_weight="1"
                android:fontFamily="@font/abel"
                android:gravity="fill"
                android:text="High Mole count:
more than 10 moles above the elbow on the arms and more than 50 on the body, especially if the moles have an irregular shape and uneven colour "
                android:textColor="#000000"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/risk_factors_background3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="15dp"
                app:srcCompat="@drawable/risk_factors_backgorund" />

            <ImageView
                android:id="@+id/risk_factors_background3_1"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:layout_marginLeft="-229dp"
                android:layout_marginTop="-95dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/risk_factor_bcg_2" />

            <ImageView
                android:id="@+id/family"
                android:layout_width="308dp"
                android:layout_height="76dp"
                android:layout_marginLeft="-75dp"
                android:layout_marginTop="-90dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/family" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="209dp"
                android:layout_height="87dp"
                android:layout_gravity="center"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="-80dp"
                android:layout_weight="1"
                android:fontFamily="@font/abel"
                android:gravity="fill"
                android:text="A strong family history :
Because family members have a similar skin type or a similar pattern of sun exposure in childhood. Only 1-2% of melanomas in Australia involve an inherited faulty gene.
"
                android:textColor="#000000"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/risk_factors_background4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="15dp"
                app:srcCompat="@drawable/risk_factors_backgorund" />

            <ImageView
                android:id="@+id/risk_factors_background4_1"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:layout_marginLeft="-229dp"
                android:layout_marginTop="-95dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/risk_factor_bcg_2" />

            <ImageView
                android:id="@+id/eyes_hair"
                android:layout_width="308dp"
                android:layout_height="76dp"
                android:layout_marginLeft="-75dp"
                android:layout_marginTop="-90dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/eyes" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="209dp"
                android:layout_height="87dp"
                android:layout_gravity="center"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="-80dp"
                android:layout_weight="1"
                android:fontFamily="@font/abel"
                android:gravity="fill"
                android:text="Light-coloured eyes, fair or red hair:
Anyone can develop Melanoma. However, risk is higher with people who have light-coloured eys(blue/green) and fair or red hair.
"
                android:textColor="#000000"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/girl_child"
                android:layout_width="215dp"
                android:layout_height="273dp"
                android:layout_weight="1"
                android:rotation="39"
                android:layout_marginLeft="-85dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/girl_child" />

            <ImageView
                android:id="@+id/signs_callout"
                android:layout_width="295dp"
                android:layout_height="180dp"
                android:layout_marginLeft="95dp"
                android:layout_marginTop="-260dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/signs_symptoms" />

            <ImageView
                android:id="@+id/hex1"
                android:layout_width="98dp"
                android:layout_height="108dp"
                android:layout_weight="1"
                android:layout_marginTop="30dp"
                app:srcCompat="@drawable/polygon_1" />

            <ImageView
                android:id="@+id/hex2"
                android:layout_width="98dp"
                android:layout_height="108dp"
                android:layout_weight="1"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="-160dp"
                app:srcCompat="@drawable/polygon_2" />

            <ImageView
                android:id="@+id/hex3"
                android:layout_width="98dp"
                android:layout_height="108dp"
                android:layout_marginTop="-55dp"
                android:layout_weight="1"
                android:layout_marginLeft="160dp"
                app:srcCompat="@drawable/polygon_3" />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>