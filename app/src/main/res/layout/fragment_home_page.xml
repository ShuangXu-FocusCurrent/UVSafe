<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".views.functionsFragment.HomePageFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/b3_2"
        android:orientation="vertical">

        <AutoCompleteTextView
            android:id="@+id/address"
            android:layout_width="350dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/roboto"
            android:gravity="center_horizontal"
            android:text="Melbourne"
            android:textAlignment="center"
            android:textColor="#693900"
            android:textColorHighlight="@color/black"
            android:textColorHint="#0E0C0C"
            android:textSize="30sp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/imageViewBoy"
                android:layout_width="128dp"
                android:layout_height="125dp"
                android:layout_marginTop="48dp"
                android:src="@drawable/child_img"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/uv_instrcut2" />

            <Button
                android:id="@+id/buttonInfo"
                android:layout_width="211dp"
                android:layout_height="49dp"
                android:layout_marginStart="-2dp"
                android:layout_marginLeft="-2dp"
                android:layout_marginTop="120dp"
                android:elevation="50dp"
                android:fontFamily="@font/concert_one"
                android:text="Info"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:backgroundTint="#FE623E"
                app:cornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.617"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/uv_instrcut2"
                app:strokeColor="#FE623E"
                app:strokeWidth="3dp" />

            <ImageView
                android:id="@+id/temp_back"
                android:layout_width="145dp"
                android:layout_height="71dp"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginEnd="1dp"
                android:layout_marginRight="1dp"
                android:src="@drawable/temp_back"
                app:layout_constraintBottom_toTopOf="@+id/uvmeter"
                app:layout_constraintEnd_toStartOf="@+id/sunset_img"
                app:layout_constraintHorizontal_bias="0.471"
                app:layout_constraintStart_toEndOf="@+id/sunrise_img"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.512" />

            <ImageView
                android:id="@+id/uvmeter"
                android:layout_width="240dp"
                android:layout_height="240dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="116dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/uv_moderate"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.556"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/moon_ic"
                android:layout_width="57dp"
                android:layout_height="57dp"
                android:layout_marginEnd="60dp"
                android:layout_marginRight="60dp"
                android:layout_marginBottom="12dp"
                android:src="@drawable/moon"
                app:layout_constraintBottom_toBottomOf="@+id/temp_back"
                app:layout_constraintEnd_toEndOf="@+id/temp_back"
                app:layout_constraintHorizontal_bias="0.352"
                app:layout_constraintStart_toStartOf="@+id/temp_back"
                app:layout_constraintTop_toTopOf="@+id/temperature"
                app:layout_constraintVertical_bias="0.6" />

            <ImageView
                android:id="@+id/imageViewBoy2"
                android:layout_width="143dp"
                android:layout_height="136dp"
                android:layout_marginTop="48dp"
                android:src="@drawable/child_img_2"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.992"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/uv_instrcut2" />

            <ImageView
                android:id="@+id/day_ic"
                android:layout_width="64dp"
                android:layout_height="53dp"
                android:layout_marginEnd="70dp"
                android:layout_marginRight="70dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/temp_img"
                app:layout_constraintBottom_toBottomOf="@+id/temp_back"
                app:layout_constraintEnd_toEndOf="@+id/temp_back"
                app:layout_constraintEnd_toStartOf="@+id/temperature"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/temp_back" />

            <ImageView
                android:id="@+id/sunrise_img"
                android:layout_width="51dp"
                android:layout_height="62dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:src="@drawable/sunrise_img"
                app:layout_constraintBottom_toBottomOf="@+id/temp_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/temp_back"
                app:layout_constraintVertical_bias="0.111" />

            <ImageView
                android:id="@+id/sunset_img"
                android:layout_width="51dp"
                android:layout_height="62dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/sunset_img"
                app:layout_constraintBottom_toBottomOf="@+id/temp_back"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/temp_back"
                app:layout_constraintVertical_bias="0.111" />

            <TextView
                android:id="@+id/temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:textColor="#693900"
                android:textSize="36sp"
                app:layout_constraintBottom_toBottomOf="@+id/temp_back"
                app:layout_constraintEnd_toEndOf="@+id/temp_back"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/moon_ic"
                app:layout_constraintTop_toTopOf="@+id/temp_back"
                app:layout_constraintVertical_bias="0.541"
                tools:text="23" />

            <TextView
                android:id="@+id/degree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="o"
                android:textColor="#693900"
                android:textSize="20sp"
                app:layout_constraintEnd_toStartOf="@+id/templable"
                app:layout_constraintStart_toEndOf="@+id/temperature"
                app:layout_constraintTop_toTopOf="@+id/temp_back" />

            <TextView
                android:id="@+id/templable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="C"
                android:textColor="#693900"
                android:textSize="36sp"
                app:layout_constraintBottom_toBottomOf="@+id/temperature"
                app:layout_constraintEnd_toEndOf="@+id/temp_back"
                app:layout_constraintStart_toEndOf="@+id/temperature"
                app:layout_constraintTop_toTopOf="@+id/temperature"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/sun_rise_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/concert_one"
                android:text="6:42 am"
                android:textColor="#693900"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/sun_rise_txt"
                app:layout_constraintStart_toStartOf="@+id/sun_rise_txt"
                app:layout_constraintTop_toBottomOf="@+id/sun_rise_txt" />

            <TextView
                android:id="@+id/sun_set_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/concert_one"
                android:text="5:57 pm"
                android:textColor="#693900"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/sun_set_txt"
                app:layout_constraintStart_toStartOf="@+id/sun_set_txt"
                app:layout_constraintTop_toBottomOf="@+id/sun_set_txt" />

            <TextView
                android:id="@+id/sun_rise_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/concert_one"
                android:text="Sunrise"
                android:textColor="#693900"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/sunrise_img"
                app:layout_constraintStart_toStartOf="@+id/sunrise_img"
                app:layout_constraintTop_toBottomOf="@+id/sunrise_img" />

            <TextView
                android:id="@+id/sun_set_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/concert_one"
                android:text="Sunset"
                android:textColor="#693900"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/sunset_img"
                app:layout_constraintStart_toStartOf="@+id/sunset_img"
                app:layout_constraintTop_toBottomOf="@+id/sunset_img" />

            <TextView
                android:id="@+id/uvlable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/concert_one"
                android:text="UV"
                android:textColor="#FFC403"
                android:textSize="34sp"
                app:layout_constraintBottom_toBottomOf="@+id/uvmeter"
                app:layout_constraintEnd_toEndOf="@+id/uvmeter"
                app:layout_constraintHorizontal_bias="0.448"
                app:layout_constraintStart_toStartOf="@+id/uvmeter"
                app:layout_constraintTop_toTopOf="@+id/uvmeter"
                app:layout_constraintVertical_bias="0.425" />

            <TextView
                android:id="@+id/uvIndex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/concert_one"
                android:text="3"
                android:textColor="#FFC403"
                android:textSize="48sp"
                app:layout_constraintBottom_toBottomOf="@+id/uvmeter"
                app:layout_constraintEnd_toEndOf="@+id/uvmeter"
                app:layout_constraintHorizontal_bias="0.541"
                app:layout_constraintStart_toStartOf="@+id/uvmeter"
                app:layout_constraintTop_toTopOf="@+id/uvmeter"
                app:layout_constraintVertical_bias="0.586" />

            <TextView
                android:id="@+id/uv_instrcut2"
                android:layout_width="385dp"
                android:layout_height="71dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/concert_one"
                android:gravity="center"
                android:text="Sun Protection Not Required!"
                android:textAlignment="center"
                android:textColor="#EC6C4B"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="@+id/uvmeter"
                app:layout_constraintStart_toStartOf="@+id/uvmeter"
                app:layout_constraintTop_toBottomOf="@+id/uvmeter" />

            <TextView
                android:id="@+id/uv_instrcut"
                android:layout_width="385dp"
                android:layout_height="71dp"
                android:fontFamily="@font/concert_one"
                android:gravity="center"
                android:text="Sun Protection Required!"
                android:textAlignment="center"
                android:textColor="#EC6C4B"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="@+id/uvmeter"
                app:layout_constraintHorizontal_bias="0.503"
                app:layout_constraintStart_toStartOf="@+id/uvmeter"
                app:layout_constraintTop_toBottomOf="@+id/uvmeter" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</FrameLayout>