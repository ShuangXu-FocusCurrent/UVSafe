<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragment.HomePageFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <AutoCompleteTextView
            android:id="@+id/address"
            android:layout_width="367dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:gravity="center_horizontal"
            android:text="Melbourne"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/home_background" />

        <Button
            android:id="@+id/buttonInfo"
            android:layout_width="144dp"
            android:layout_height="55dp"
            android:layout_marginTop="40dp"
            android:elevation="50dp"
            android:fontFamily="@font/concert_one"
            android:text="Info"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:backgroundTint="#FE623E"
            app:cornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.486"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/uv_instrcut2"
            app:strokeColor="#FE623E"
            app:strokeWidth="3dp" />

        <ImageView
            android:id="@+id/home_background"
            android:layout_width="795dp"
            android:layout_height="559dp"
            android:src="@drawable/b3_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/temp_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/temp_back"
            app:layout_constraintBottom_toTopOf="@+id/uvmeter"
            app:layout_constraintEnd_toStartOf="@+id/sunset_img"
            app:layout_constraintStart_toEndOf="@+id/sunrise_img"
            app:layout_constraintTop_toBottomOf="@+id/address" />

        <ImageView
            android:id="@+id/uvmeter"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="156dp"
            android:src="@drawable/uv_moderate"
            app:layout_constraintBottom_toBottomOf="@+id/home_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/home_background"
            app:layout_constraintVertical_bias="0.184" />

        <ImageView
            android:id="@+id/moon_ic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/moon"
            app:layout_constraintBottom_toBottomOf="@+id/temperature"
            app:layout_constraintEnd_toEndOf="@+id/temp_back"
            app:layout_constraintHorizontal_bias="0.051"
            app:layout_constraintStart_toStartOf="@+id/temp_back"
            app:layout_constraintTop_toTopOf="@+id/temperature" />

        <ImageView
            android:id="@+id/imageViewBoy"
            android:layout_width="150dp"
            android:layout_height="174dp"
            android:src="@drawable/child_img"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.465"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/uv_instrcut2" />

        <ImageView
            android:id="@+id/day_ic"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginBottom="2dp"
            android:src="@drawable/temp_img"
            app:layout_constraintBottom_toBottomOf="@+id/temperature"
            app:layout_constraintEnd_toStartOf="@+id/temperature"
            app:layout_constraintHorizontal_bias="0.236"
            app:layout_constraintStart_toStartOf="@+id/temp_back"
            app:layout_constraintTop_toTopOf="@+id/temperature"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/sunrise_img"
            android:layout_width="51dp"
            android:layout_height="62dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/sunrise_img"
            app:layout_constraintBottom_toBottomOf="@+id/temp_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/temp_back"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/sunset_img"
            android:layout_width="51dp"
            android:layout_height="62dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/sunset_img"
            app:layout_constraintBottom_toBottomOf="@+id/temp_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/temp_back"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/roboto"
            android:textColor="#693900"
            android:textSize="32sp"
            app:layout_constraintBottom_toBottomOf="@+id/temp_back"
            app:layout_constraintEnd_toEndOf="@+id/temp_back"
            app:layout_constraintHorizontal_bias="0.31"
            app:layout_constraintStart_toEndOf="@+id/moon_ic"
            app:layout_constraintTop_toTopOf="@+id/temp_back"
            app:layout_constraintVertical_bias="0.586" />

        <TextView
            android:id="@+id/degree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="o"
            android:textColor="#693900"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/templable"
            app:layout_constraintStart_toEndOf="@+id/temperature"
            app:layout_constraintTop_toTopOf="@+id/temp_back" />

        <TextView
            android:id="@+id/templable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="C"
            android:textColor="#693900"
            android:textSize="32sp"
            app:layout_constraintBottom_toBottomOf="@+id/temperature"
            app:layout_constraintEnd_toEndOf="@+id/temp_back"
            app:layout_constraintStart_toEndOf="@+id/temperature"
            app:layout_constraintTop_toTopOf="@+id/temperature"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/sun_rise_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/concert_one"
            android:text="6:42 am"
            android:textColor="#693900"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/sun_rise_txt"
            app:layout_constraintStart_toStartOf="@+id/sun_rise_txt"
            app:layout_constraintTop_toBottomOf="@+id/sun_rise_txt" />

        <TextView
            android:id="@+id/sun_set_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/concert_one"
            android:text="5:57 pm"
            android:textColor="#693900"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/sun_set_txt"
            app:layout_constraintStart_toStartOf="@+id/sun_set_txt"
            app:layout_constraintTop_toBottomOf="@+id/sun_set_txt" />

        <TextView
            android:id="@+id/sun_rise_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/concert_one"
            android:text="Sunrise"
            android:textColor="#693900"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/sunrise_img"
            app:layout_constraintStart_toStartOf="@+id/sunrise_img"
            app:layout_constraintTop_toBottomOf="@+id/sunrise_img" />

        <TextView
            android:id="@+id/sun_set_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/concert_one"
            android:text="Sunset"
            android:textColor="#693900"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/sunset_img"
            app:layout_constraintStart_toStartOf="@+id/sunset_img"
            app:layout_constraintTop_toBottomOf="@+id/sunset_img" />

        <TextView
            android:id="@+id/uvlable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/concert_one"
            android:text="UV"
            android:textColor="#FFC403"
            android:textSize="34sp"
            app:layout_constraintBottom_toBottomOf="@+id/uvmeter"
            app:layout_constraintEnd_toEndOf="@+id/uvmeter"
            app:layout_constraintHorizontal_bias="0.417"
            app:layout_constraintStart_toStartOf="@+id/uvmeter"
            app:layout_constraintTop_toTopOf="@+id/uvmeter"
            app:layout_constraintVertical_bias="0.416" />

        <TextView
            android:id="@+id/uvIndex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/concert_one"
            android:text="3"
            android:textColor="#FFC403"
            android:textSize="48sp"
            app:layout_constraintBottom_toBottomOf="@+id/uvmeter"
            app:layout_constraintEnd_toEndOf="@+id/uvmeter"
            app:layout_constraintHorizontal_bias="0.567"
            app:layout_constraintStart_toStartOf="@+id/uvmeter"
            app:layout_constraintTop_toTopOf="@+id/uvmeter"
            app:layout_constraintVertical_bias="0.556" />

        <TextView
            android:id="@+id/uv_instrcut2"
            android:layout_width="409dp"
            android:layout_height="54dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/concert_one"
            android:gravity="center"
            android:text="Sun Protection Required!"
            android:textAlignment="center"
            android:textColor="#EC6C4B"
            android:textSize="27sp"
            app:layout_constraintEnd_toEndOf="@+id/uvmeter"
            app:layout_constraintStart_toStartOf="@+id/uvmeter"
            app:layout_constraintTop_toBottomOf="@+id/uvmeter" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>