<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.functionsFragment.HomePageFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/b3_2"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <Button
                android:id="@+id/buttonInfo"
                android:layout_width="@dimen/_170sdp"
                android:layout_height="wrap_content"
                android:elevation="50dp"
                android:fontFamily="@font/concert_one"
                android:text="Info"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_15ssp"
                app:backgroundTint="#FE623E"
                app:cornerRadius="@dimen/_7sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.79"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/uvmeter"
                app:layout_constraintVertical_bias="0.836"
                app:strokeColor="#FE623E"
                app:strokeWidth="@dimen/_3sdp" />

            <ImageView
                android:id="@+id/imageViewBoy2"
                android:layout_width="@dimen/_105sdp"
                android:layout_height="@dimen/_105sdp"
                android:src="@drawable/child_img_2"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/uvmeter"
                app:layout_constraintVertical_bias="0.561" />

            <ImageView
                android:id="@+id/imageViewBoy"
                android:layout_width="@dimen/_105sdp"
                android:layout_height="@dimen/_105sdp"
                android:src="@drawable/child_img"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/uvmeter" />

            <TextView
                android:id="@+id/uv_instrcut2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/concert_one"
                android:gravity="center"
                android:text="Sun Protection Not Required!"
                android:textAlignment="center"
                android:textColor="#EC6C4B"
                android:textSize="@dimen/_20ssp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/uvmeter"
                app:layout_constraintVertical_bias="0.046" />

            <TextView
                android:id="@+id/uv_instrcut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/concert_one"
                android:gravity="center"
                android:text="Sun Protection Required!"
                android:textAlignment="center"
                android:textColor="#EC6C4B"
                android:textSize="@dimen/_20ssp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/uvmeter"
                app:layout_constraintVertical_bias="0.042" />

            <ImageView
                android:id="@+id/uvmeter"
                android:layout_width="@dimen/_180sdp"
                android:layout_height="@dimen/_180sdp"
                android:src="@drawable/uv_moderate"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/temp_back"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/uvlable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/concert_one"
                android:text="UV"
                android:textColor="#FFC403"
                android:textSize="@dimen/_27ssp"
                app:layout_constraintBottom_toBottomOf="@+id/uvmeter"
                app:layout_constraintEnd_toEndOf="@+id/uvmeter"
                app:layout_constraintHorizontal_bias="0.448"
                app:layout_constraintStart_toStartOf="@+id/uvmeter"
                app:layout_constraintTop_toTopOf="@+id/uvmeter"
                app:layout_constraintVertical_bias="0.425" />

            <TextView
                android:id="@+id/uvIndex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/concert_one"
                android:text="3"
                android:textColor="#FFC403"
                android:textSize="@dimen/_35ssp"
                app:layout_constraintBottom_toBottomOf="@+id/uvmeter"
                app:layout_constraintEnd_toEndOf="@+id/uvmeter"
                app:layout_constraintHorizontal_bias="0.541"
                app:layout_constraintStart_toStartOf="@+id/uvmeter"
                app:layout_constraintTop_toTopOf="@+id/uvmeter"
                app:layout_constraintVertical_bias="0.586" />

            <ImageView
                android:id="@+id/sunset_img"
                android:layout_width="@dimen/_37sdp"
                android:layout_height="@dimen/_45sdp"
                android:src="@drawable/sunset_img"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.698"
                app:layout_constraintStart_toEndOf="@+id/temp_back"
                app:layout_constraintTop_toBottomOf="@+id/address" />

            <TextView
                android:id="@+id/sun_rise_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/concert_one"
                android:text="6:42 am"
                android:textColor="#693900"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintEnd_toEndOf="@+id/sun_rise_txt"
                app:layout_constraintStart_toStartOf="@+id/sun_rise_txt"
                app:layout_constraintTop_toBottomOf="@+id/sun_rise_txt" />

            <TextView
                android:id="@+id/sun_set_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/concert_one"
                android:text="5:57 pm"
                android:textColor="#693900"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintEnd_toEndOf="@+id/sun_set_txt"
                app:layout_constraintStart_toStartOf="@+id/sun_set_txt"
                app:layout_constraintTop_toBottomOf="@+id/sun_set_txt" />

            <TextView
                android:id="@+id/sun_rise_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/concert_one"
                android:text="Sunrise"
                android:textColor="#693900"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintEnd_toEndOf="@+id/sunrise_img"
                app:layout_constraintStart_toStartOf="@+id/sunrise_img"
                app:layout_constraintTop_toBottomOf="@+id/sunrise_img" />

            <TextView
                android:id="@+id/sun_set_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/concert_one"
                android:text="Sunset"
                android:textColor="#693900"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintEnd_toEndOf="@+id/sunset_img"
                app:layout_constraintStart_toStartOf="@+id/sunset_img"
                app:layout_constraintTop_toBottomOf="@+id/sunset_img" />

            <AutoCompleteTextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto"
                android:gravity="center_horizontal"
                android:text="Melbourne"
                android:textAlignment="center"
                android:textColor="#693900"
                android:textColorHighlight="@color/black"
                android:textColorHint="#0E0C0C"
                android:textSize="@dimen/_25ssp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.488"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/temp_back"
                android:layout_width="@dimen/_112sdp"
                android:layout_height="@dimen/_53sdp"
                android:src="@drawable/temp_back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/address"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/templable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_90sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:fontFamily="@font/roboto"
                android:text="C"
                android:textColor="#693900"
                android:textSize="@dimen/_27ssp"
                app:layout_constraintBottom_toBottomOf="@+id/temp_back"
                app:layout_constraintEnd_toEndOf="@+id/temp_back"
                app:layout_constraintStart_toStartOf="@+id/temp_back"
                app:layout_constraintTop_toTopOf="@+id/temp_back" />

            <TextView
                android:id="@+id/degree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_80sdp"
                android:layout_marginEnd="@dimen/_24sdp"
                android:layout_marginBottom="@dimen/_120sdp"
                android:fontFamily="@font/roboto"
                android:text="o"
                android:textColor="#693900"
                android:textSize="@dimen/_20ssp"
                app:layout_constraintBottom_toBottomOf="@+id/temp_back"
                app:layout_constraintEnd_toEndOf="@+id/temp_back"
                app:layout_constraintStart_toStartOf="@+id/temp_back"
                app:layout_constraintTop_toTopOf="@+id/temp_back"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:fontFamily="@font/roboto"
                android:textColor="#693900"
                android:textSize="@dimen/_27ssp"
                app:layout_constraintBottom_toBottomOf="@+id/temp_back"
                app:layout_constraintEnd_toEndOf="@+id/temp_back"
                app:layout_constraintHorizontal_bias="0.615"
                app:layout_constraintStart_toStartOf="@+id/temp_back"
                app:layout_constraintTop_toTopOf="@+id/temp_back"
                tools:text="23" />

            <ImageView
                android:id="@+id/day_ic"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_50sdp"
                android:src="@drawable/temp_img"
                app:layout_constraintBottom_toBottomOf="@+id/temp_back"
                app:layout_constraintEnd_toEndOf="@+id/temp_back"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/temp_back"
                app:layout_constraintTop_toBottomOf="@+id/address" />

            <ImageView
                android:id="@+id/moon_ic"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/moon"
                app:layout_constraintBottom_toBottomOf="@+id/temp_back"
                app:layout_constraintEnd_toEndOf="@+id/temp_back"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/temp_back"
                app:layout_constraintTop_toBottomOf="@+id/address" />

            <ImageView
                android:id="@+id/sunrise_img"
                android:layout_width="@dimen/_37sdp"
                android:layout_height="@dimen/_45sdp"
                android:src="@drawable/sunrise_img"
                app:layout_constraintEnd_toStartOf="@+id/temp_back"
                app:layout_constraintHorizontal_bias="0.287"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/address" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</FrameLayout>