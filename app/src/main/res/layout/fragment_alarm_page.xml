<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.AlarmPageFragment">

    <!-- TODO: Update blank fragment layout -->


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutReminder"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/alarm_background"
            android:layout_width="295dp"
            android:layout_height="156dp"
            android:contentDescription="ignore"
            android:src="@drawable/alarm_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.959"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.277" />

        <ImageView
            android:id="@+id/notification_background"
            android:layout_width="278dp"
            android:layout_height="160dp"
            android:contentDescription="ignore"
            android:src="@drawable/alarm_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.069"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.879" />

        <Switch
            android:id="@+id/switchAlarm"
            android:layout_width="120dp"
            android:layout_height="46dp"
            android:fontFamily="@font/concert_one"
            android:scaleX="2"
            android:scaleY="2"
            android:switchMinWidth="50dp"
            android:textOff="Alarm turned OFF"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/alarm_background"
            app:layout_constraintEnd_toEndOf="@+id/alarm_background"
            app:layout_constraintHorizontal_bias="0.72"
            app:layout_constraintStart_toStartOf="@+id/alarm_background"
            app:layout_constraintTop_toTopOf="@+id/alarm_background"
            app:layout_constraintVertical_bias="0.818" />

        <Switch
            android:id="@+id/switchNotification"
            android:layout_width="120dp"
            android:layout_height="46dp"
            android:fontFamily="@font/concert_one"
            android:scaleX="2"
            android:scaleY="2"
            android:switchMinWidth="50dp"
            android:textOff="Notification Cancelled"
            android:textOn="You will receive a notification when sun protection is required"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/notification_background"
            app:layout_constraintEnd_toEndOf="@+id/alarm_background"
            app:layout_constraintHorizontal_bias="0.137"
            app:layout_constraintStart_toStartOf="@+id/alarm_background"
            app:layout_constraintTop_toTopOf="@+id/alarm_background"
            app:layout_constraintVertical_bias="0.941" />

        <Spinner
            android:id="@+id/timeSlection"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/alarm_background"
            app:layout_constraintEnd_toEndOf="@+id/alarm_background"
            app:layout_constraintHorizontal_bias="0.46"
            app:layout_constraintStart_toStartOf="@+id/alarm_background"
            app:layout_constraintTop_toTopOf="@+id/alarm_background"
            app:layout_constraintVertical_bias="0.765" />

        <ImageView
            android:id="@+id/girl_child"
            android:layout_width="181dp"
            android:layout_height="295dp"
            android:layout_marginEnd="284dp"
            android:layout_marginRight="284dp"
            android:rotation="38"
            android:src="@drawable/girl_child"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/callout_1"
            android:layout_width="295dp"
            android:layout_height="332dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="400dp"
            android:src="@drawable/callout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/al_text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginBottom="188dp"
            android:fontFamily="@font/concert_one"
            android:text="Forget to reapply sunblock ?"
            android:textColor="#E22C2C"
            app:layout_constraintBottom_toBottomOf="@+id/callout_1"
            app:layout_constraintStart_toEndOf="@+id/girl_child" />

        <TextView
            android:id="@+id/al_text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="89dp"
            android:layout_marginRight="89dp"
            android:fontFamily="@font/concert_one"
            android:text="Don't Worry !"
            android:textColor="#E22C2C"
            app:layout_constraintBottom_toTopOf="@+id/al_text_3"
            app:layout_constraintEnd_toEndOf="@+id/callout_1"
            app:layout_constraintTop_toBottomOf="@+id/al_text_1" />

        <TextView
            android:id="@+id/al_text_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="65dp"
            android:layout_marginRight="65dp"
            android:fontFamily="@font/concert_one"
            android:text="We can remind you !!"
            android:textColor="#E22C2C"
            app:layout_constraintBottom_toTopOf="@+id/alarm_background"
            app:layout_constraintEnd_toEndOf="@+id/callout_1"
            app:layout_constraintTop_toBottomOf="@+id/al_text_1"
            app:layout_constraintVertical_bias="0.568" />

        <ImageView
            android:id="@+id/ic_alarm"
            android:layout_width="65dp"
            android:layout_height="63dp"
            android:layout_marginStart="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/alarm_new"
            app:layout_constraintStart_toStartOf="@+id/alarm_background"
            app:layout_constraintTop_toTopOf="@+id/alarm_background" />

        <TextView
            android:id="@+id/al_text_4"
            android:layout_width="195dp"
            android:layout_height="39dp"
            android:layout_marginTop="42dp"
            android:layout_marginEnd="26dp"
            android:layout_marginRight="26dp"
            android:fontFamily="@font/roboto"
            android:text="Select the time and Switch ON the alarm"
            android:textColor="#9B0A0A"
            app:layout_constraintEnd_toEndOf="@+id/alarm_background"
            app:layout_constraintTop_toTopOf="@+id/alarm_background" />

        <ImageView
            android:id="@+id/boy_child"
            android:layout_width="186dp"
            android:layout_height="300dp"
            android:rotation="-22"
            android:src="@drawable/boy_child"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/not_text_5"
            app:layout_constraintTop_toBottomOf="@+id/alarm_background"
            app:layout_constraintVertical_bias="0.428" />

        <ImageView
            android:id="@+id/callout_2"
            android:layout_width="295dp"
            android:layout_height="460dp"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="44dp"
            android:rotationX="-11"
            android:rotationY="182"
            android:src="@drawable/callout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/ic_bell"
            android:layout_width="58dp"
            android:layout_height="53dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="29dp"
            android:src="@drawable/bell_new"
            app:layout_constraintStart_toStartOf="@+id/notification_background"
            app:layout_constraintTop_toTopOf="@+id/notification_background" />

        <TextView
            android:id="@+id/not_text_1"
            android:layout_width="202dp"
            android:layout_height="42dp"
            android:layout_marginStart="28dp"
            android:layout_marginLeft="28dp"
            android:fontFamily="@font/concert_one"
            android:gravity="center"
            android:text="Did you know that UV index changes through out the day ?"
            android:textColor="#E22C2C"
            app:layout_constraintBottom_toTopOf="@+id/notification_background"
            app:layout_constraintStart_toStartOf="@+id/callout_2"
            app:layout_constraintTop_toBottomOf="@+id/alarm_background"
            app:layout_constraintVertical_bias="0.345" />

        <TextView
            android:id="@+id/not_text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="86dp"
            android:layout_marginLeft="86dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="126dp"
            android:layout_marginRight="126dp"
            android:layout_marginBottom="2dp"
            android:fontFamily="@font/concert_one"
            android:text="Never Mind..."
            android:textColor="#E22C2C"
            app:layout_constraintBottom_toTopOf="@+id/not_text_3"
            app:layout_constraintEnd_toEndOf="@+id/callout_2"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/callout_2"
            app:layout_constraintTop_toBottomOf="@+id/not_text_1"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/not_text_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="66dp"
            android:layout_marginLeft="66dp"
            android:layout_marginEnd="98dp"
            android:layout_marginRight="98dp"
            android:layout_marginBottom="28dp"
            android:fontFamily="@font/concert_one"
            android:text="We Can notify you !!"
            android:textColor="#E22C2C"
            app:layout_constraintBottom_toTopOf="@+id/notification_background"
            app:layout_constraintEnd_toEndOf="@+id/callout_2"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/callout_2" />

        <TextView
            android:id="@+id/not_text_5"
            android:layout_width="189dp"
            android:layout_height="37dp"
            android:layout_marginStart="75dp"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="37dp"
            android:fontFamily="@font/roboto"
            android:text="Notify Me when UV index reaches 3 or above"
            android:textColor="#9B0A0A"
            app:layout_constraintStart_toStartOf="@+id/notification_background"
            app:layout_constraintTop_toTopOf="@+id/notification_background" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>