<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.functionsFragment.AlarmPageFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutReminder"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/notification_background2"
            android:layout_width="@dimen/_210sdp"
            android:layout_height="@dimen/_87sdp"
            android:contentDescription="ignore"
            android:src="@drawable/alarm_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.829" />

        <Switch
            android:id="@+id/switchNotification"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_70sdp"
            android:layout_marginTop="@dimen/_70sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_40sdp"
            android:fontFamily="@font/concert_one"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:switchMinWidth="@dimen/_30sdp"
            android:textOff="Notification Cancelled"
            android:textOn="You will receive a notification when sun protection is required"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintBottom_toBottomOf="@+id/notification_background2"
            app:layout_constraintEnd_toEndOf="@+id/notification_background2"
            app:layout_constraintStart_toStartOf="@+id/notification_background2"
            app:layout_constraintTop_toTopOf="@+id/notification_background2" />

        <ImageView
            android:id="@+id/ic_bell2"
            android:layout_width="@dimen/_47sdp"
            android:layout_height="@dimen/_43sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_145sdp"
            android:layout_marginBottom="@dimen/_57sdp"
            android:src="@drawable/bell_new"
            app:layout_constraintBottom_toBottomOf="@+id/notification_background2"
            app:layout_constraintEnd_toEndOf="@+id/notification_background2"
            app:layout_constraintHorizontal_bias="0.588"
            app:layout_constraintStart_toStartOf="@+id/notification_background2"
            app:layout_constraintTop_toTopOf="@+id/notification_background2"
            app:layout_constraintVertical_bias="0.348" />

        <TextView
            android:id="@+id/not_text_7"
            android:layout_width="@dimen/_140sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_87sdp"
            android:fontFamily="@font/alegreya"
            android:text="Notify Me when UV index reaches 3 or above"
            android:textColor="#262424"
            android:textSize="@dimen/_11ssp"
            app:layout_constraintBottom_toBottomOf="@+id/notification_background2"
            app:layout_constraintEnd_toEndOf="@+id/notification_background2"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/notification_background2"
            app:layout_constraintTop_toTopOf="@+id/notification_background2"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/callout_3"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_110sdp"
            android:rotationX="-11"
            android:rotationY="182"
            android:src="@drawable/callout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/alarm_background2"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/not_text_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_80sdp"
            android:layout_marginEnd="@dimen/_120sdp"
            android:layout_marginBottom="@dimen/_40sdp"
            android:fontFamily="@font/concert_one"
            android:text="Never Mind..."
            android:textColor="#262424"
            android:textSize="@dimen/_11ssp"
            app:layout_constraintBottom_toBottomOf="@+id/callout_3"
            app:layout_constraintEnd_toEndOf="@+id/callout_3"
            app:layout_constraintHorizontal_bias="0.666"
            app:layout_constraintStart_toStartOf="@+id/callout_3"
            app:layout_constraintTop_toBottomOf="@+id/not_text_"
            app:layout_constraintVertical_bias="0.909" />

        <TextView
            android:id="@+id/not_text_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_80sdp"
            android:layout_marginEnd="@dimen/_75sdp"
            android:layout_marginBottom="@dimen/_27sdp"
            android:fontFamily="@font/concert_one"
            android:text="We Can notify you!"
            android:textColor="#262424"
            android:textSize="@dimen/_11ssp"
            app:layout_constraintBottom_toBottomOf="@+id/callout_3"
            app:layout_constraintEnd_toEndOf="@+id/callout_3"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/callout_3"
            app:layout_constraintTop_toBottomOf="@+id/not_text_4"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/not_text_"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_17sdp"
            android:layout_marginTop="@dimen/_37sdp"
            android:layout_marginEnd="@dimen/_50sdp"
            android:layout_marginBottom="@dimen/_93sdp"
            android:fontFamily="@font/concert_one"
            android:gravity="center"
            android:text="Did you know UV index change throughout the day?"
            android:textColor="#262424"
            android:textSize="@dimen/_11ssp"
            app:layout_constraintBottom_toBottomOf="@+id/callout_3"
            app:layout_constraintEnd_toEndOf="@+id/callout_3"
            app:layout_constraintHorizontal_bias="0.722"
            app:layout_constraintStart_toStartOf="@+id/callout_3"
            app:layout_constraintTop_toTopOf="@+id/callout_3"
            app:layout_constraintVertical_bias="0.29" />

        <ImageView
            android:id="@+id/boy_child2"
            android:layout_width="@dimen/_160sdp"
            android:layout_height="@dimen/_250sdp"
            android:layout_marginStart="@dimen/_200sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:rotation="-22"
            android:src="@drawable/boy_child"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/alarm_background2"
            app:layout_constraintVertical_bias="0.0" />

        <Switch
            android:id="@+id/switchAlarm"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_127sdp"
            android:layout_marginTop="@dimen/_75sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_35sdp"
            android:fontFamily="@font/concert_one"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:switchMinWidth="@dimen/_35sdp"
            android:textOff="Alarm turned OFF"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintBottom_toBottomOf="@+id/alarm_background2"
            app:layout_constraintEnd_toEndOf="@+id/alarm_background2"
            app:layout_constraintStart_toStartOf="@+id/alarm_background2"
            app:layout_constraintTop_toTopOf="@+id/alarm_background2" />

        <ImageView
            android:id="@+id/alarm_background2"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_100sdp"
            android:contentDescription="ignore"
            android:src="@drawable/alarm_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.897"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.26999998" />

        <ImageView
            android:id="@+id/callout_"
            android:layout_width="@dimen/_230sdp"
            android:layout_height="@dimen/_110sdp"
            android:src="@drawable/callout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/al_text_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_65sdp"
            android:layout_marginTop="@dimen/_63sdp"
            android:layout_marginEnd="@dimen/_57sdp"
            android:layout_marginBottom="@dimen/_27sdp"
            android:fontFamily="@font/concert_one"
            android:text="We can remind you!"
            android:textColor="#262424"
            android:textSize="@dimen/_11ssp"
            app:layout_constraintBottom_toBottomOf="@+id/callout_"
            app:layout_constraintEnd_toEndOf="@+id/callout_"
            app:layout_constraintStart_toStartOf="@+id/callout_"
            app:layout_constraintTop_toTopOf="@+id/callout_" />

        <TextView
            android:id="@+id/al_text_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/concert_one"
            android:text="Forget to reapply sunblock?"
            android:textColor="#262424"
            android:textSize="@dimen/_11ssp"
            app:layout_constraintBottom_toBottomOf="@+id/callout_"
            app:layout_constraintEnd_toEndOf="@id/callout_"
            app:layout_constraintHorizontal_bias="0.651"
            app:layout_constraintStart_toStartOf="@+id/callout_"
            app:layout_constraintTop_toTopOf="@+id/callout_"
            app:layout_constraintVertical_bias="0.238" />

        <TextView
            android:id="@+id/al_text_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_45sdp"
            android:layout_marginBottom="@dimen/_54sdp"
            android:fontFamily="@font/concert_one"
            android:text="Don't Worry,"
            android:textColor="#262424"
            android:textSize="@dimen/_11ssp"
            app:layout_constraintBottom_toBottomOf="@+id/callout_"
            app:layout_constraintEnd_toEndOf="@+id/callout_"
            app:layout_constraintHorizontal_bias="0.554"
            app:layout_constraintStart_toStartOf="@+id/callout_"
            app:layout_constraintTop_toTopOf="@+id/callout_"
            app:layout_constraintVertical_bias="0.333" />

        <Spinner
            android:id="@+id/timeSlection"
            android:layout_width="@dimen/_140sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_70sdp"
            android:layout_marginEnd="@dimen/_85sdp"
            android:layout_marginBottom="@dimen/_25sdp"
            app:layout_constraintBottom_toBottomOf="@+id/alarm_background2"
            app:layout_constraintEnd_toEndOf="@+id/alarm_background2"
            app:layout_constraintStart_toStartOf="@+id/alarm_background2"
            app:layout_constraintTop_toTopOf="@+id/alarm_background2" />

        <ImageView
            android:id="@+id/girl_child2"
            android:layout_width="@dimen/_160sdp"
            android:layout_height="@dimen/_220sdp"
            android:layout_marginEnd="@dimen/_205sdp"
            android:rotation="38"
            android:src="@drawable/girl_child"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/al_text_7"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginStart="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_30sdp"
            android:fontFamily="@font/alegreya"
            android:text="Select the time and Switch ON the alarm"
            android:textColor="#262424"
            android:textSize="@dimen/_11ssp"
            app:layout_constraintBottom_toBottomOf="@+id/alarm_background2"
            app:layout_constraintEnd_toEndOf="@+id/alarm_background2"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/alarm_background2"
            app:layout_constraintTop_toTopOf="@+id/alarm_background2"
            app:layout_constraintVertical_bias="0.466" />

        <ImageView
            android:id="@+id/ic_alarm2"
            android:layout_width="@dimen/_52sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_57sdp"
            android:src="@drawable/alarm_new"
            app:layout_constraintBottom_toBottomOf="@+id/alarm_background2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/alarm_background2"
            app:layout_constraintTop_toTopOf="@+id/alarm_background2"
            app:layout_constraintVertical_bias="0.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>