<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.AlarmPageFragment">

    <!-- TODO: Update blank fragment layout -->


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutReminder"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/alarm_background"
            android:layout_width="375dp"
            android:layout_height="197dp"
            android:src="@drawable/alarm_background"
            android:contentDescription="ignore"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.326"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.065" />

        <ImageView
            android:id="@+id/notification_background"
            android:layout_width="375dp"
            android:layout_height="197dp"
            android:src="@drawable/alarm_background"
            android:contentDescription="ignore"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.333"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.454" />

        <ImageView
            android:id="@+id/alarm_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="ignore"
            android:src="@drawable/alarm_icon"
            app:layout_constraintBottom_toBottomOf="@+id/alarm_background"
            app:layout_constraintEnd_toEndOf="@+id/alarm_background"
            app:layout_constraintHorizontal_bias="0.033"
            app:layout_constraintStart_toStartOf="@+id/alarm_background"
            app:layout_constraintTop_toTopOf="@+id/alarm_background"
            app:layout_constraintVertical_bias="0.267" />

        <TextView
            android:id="@+id/reminder_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="@string/alarm"
            android:textColor="#300D93"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/alarm_background"
            app:layout_constraintEnd_toEndOf="@+id/alarm_background"
            app:layout_constraintHorizontal_bias="0.793"
            app:layout_constraintStart_toStartOf="@+id/alarm_background"
            app:layout_constraintTop_toTopOf="@+id/alarm_background"
            app:layout_constraintVertical_bias="0.341" />

        <TextView
            android:id="@+id/notification_txt"
            android:layout_width="279dp"
            android:layout_height="51dp"
            android:fontFamily="@font/roboto"
            android:gravity="center|start"
            android:text="@string/notification_uv"
            android:textColor="#300D93"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/notification_background"
            app:layout_constraintEnd_toEndOf="@+id/notification_background"
            app:layout_constraintHorizontal_bias="0.802"
            app:layout_constraintStart_toStartOf="@+id/notification_background"
            app:layout_constraintTop_toBottomOf="@+id/alarm_background"
            app:layout_constraintVertical_bias="0.251" />

        <Switch
            android:id="@+id/switchAlarm"
            android:layout_width="120dp"
            android:layout_height="46dp"
            android:fontFamily="@font/concert_one"
            android:scaleX="2"
            android:scaleY="2"
            android:switchMinWidth="50dp"
            android:textOff="Alarm turned OFF"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/alarm_background"
            app:layout_constraintEnd_toEndOf="@+id/alarm_background"
            app:layout_constraintHorizontal_bias="0.768"
            app:layout_constraintStart_toStartOf="@+id/alarm_background"
            app:layout_constraintTop_toTopOf="@+id/alarm_background"
            app:layout_constraintVertical_bias="0.801" />

        <Switch
            android:id="@+id/switchNotification"
            android:layout_width="120dp"
            android:layout_height="46dp"
            android:fontFamily="@font/concert_one"
            android:scaleX="2"
            android:scaleY="2"
            android:switchMinWidth="50dp"
            android:textOff="Notification Cancelled"
            android:textOn="You will receive a notification when sun protection is required"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/notification_background"
            app:layout_constraintEnd_toEndOf="@+id/alarm_background"
            app:layout_constraintHorizontal_bias="0.764"
            app:layout_constraintStart_toStartOf="@+id/alarm_background"
            app:layout_constraintTop_toTopOf="@+id/alarm_background"
            app:layout_constraintVertical_bias="0.902" />

        <ImageView
            android:id="@+id/bell_img"
            android:layout_width="71dp"
            android:layout_height="69dp"
            android:contentDescription="ignore"
            android:src="@drawable/notification_icon"
            app:layout_constraintBottom_toBottomOf="@+id/notification_background"
            app:layout_constraintEnd_toEndOf="@+id/notification_background"
            app:layout_constraintHorizontal_bias="0.019"
            app:layout_constraintStart_toStartOf="@+id/notification_background"
            app:layout_constraintTop_toBottomOf="@+id/alarm_background"
            app:layout_constraintVertical_bias="0.128" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>