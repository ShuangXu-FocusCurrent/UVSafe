<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scroll_view_sunscreen_page"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="30dp"
            android:background="@drawable/about_sunscreen_bg"
            >

            <VideoView
                android:id="@+id/about_sunscreen_video_view"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/about_sunscreen_video_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/concert_one"
                android:gravity="center"
                android:text="@string/skinEduVideoResources"
                android:textStyle="bold|italic" />

            <Button
                android:id="@+id/buttonAboutSunscreenVid"
                android:layout_width="176dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center|center_horizontal"
                android:text="@string/playVideo"
                android:textColor="#743AB7"
                app:backgroundTint="#EAFCFF"
                app:cornerRadius="20dp"
                app:strokeColor="#673AB7"
                app:strokeWidth="3dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/concert_one"
                android:text="Understanding Sunscreen"
                android:textColor="#3A9DF4"
                android:textSize="25dp" />

            <ImageView
                android:id="@+id/edu_sun_main_image"
                android:layout_width="@dimen/_270sdp"
                android:layout_height="@dimen/_190sdp"
                android:layout_marginBottom="30dp"
                app:srcCompat="@drawable/benefits_sunscreen" />

            <TextView
                android:id="@+id/sunscreen_benefits_image_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/concert_one"
                android:gravity="center"
                android:textSize="12sp"
                android:text="https://www.freepik.com/free-vector/organic-flat-sun-protection-infographic_13906509.html"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/section1_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/concert_one"
                android:text="How Sunscreen helps you ?"
                android:textColor="#3A9DF4"
                android:textSize="25dp" />

            <!--About sunscreen source:-->
            <!--https://www.skincancer.org/skin-cancer-prevention/sun-protection/sunscreen/-->
            <TextView
                android:id="@+id/underline_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/concert_one"
                android:text="When used as directed, sunscreen is proven to:
\n\n1. Decrease your risk of skin cancers and skin precancers. \n\n2. Regular daily use of SPF 15 sunscreen can reduce your risk of developing squamous cell carcinoma (SCC) by about 40 percent, and lower your melanoma risk by 50 percent.
\n\n3. Help prevent premature skin aging caused by the sun, including wrinkles, sagging and age spots."
                android:textColor="#454141" />

            <TextView
                android:id="@+id/sunscreen_text_source"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/concert_one"
                android:text="Source: https://www.skincancer.org/skin-cancer-prevention/sun-protection/sunscreen/"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/title_1_causes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/concert_one"
                android:text="Sunscreen Myths !!"
                android:textColor="#3A9DF4"
                android:textSize="25dp" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/button_myth1"
                    android:layout_width="@dimen/_75sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="left|top"
                    android:text="Myth 1"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/_10ssp"
                    app:backgroundTint="#F2A33B"
                    app:cornerRadius="@dimen/_18sdp"
                    android:elevation="2dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/myth"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    app:strokeColor="#FFFEFE"
                    app:strokeWidth="@dimen/_2sdp" />

                <Button
                    android:id="@+id/button_myth2"
                    android:layout_width="@dimen/_75sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="left|top"
                    android:elevation="2dp"
                    android:text="Myth 2"
                    android:textColor="#FDFDFD"
                    android:textSize="@dimen/_10ssp"
                    app:backgroundTint="#EE774D"
                    app:cornerRadius="@dimen/_18sdp"
                    app:layout_constraintEnd_toStartOf="@+id/myth"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button_myth1"
                    app:strokeColor="#FDFDFD"
                    app:strokeWidth="@dimen/_2sdp" />

                <Button
                    android:id="@+id/button_myth3"
                    android:layout_width="@dimen/_75sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="left|top"
                    android:text="Myth 3"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/_10ssp"
                    app:backgroundTint="#AF80C3"
                    app:cornerRadius="@dimen/_18sdp"
                    android:elevation="2dp"
                    app:layout_constraintEnd_toStartOf="@+id/myth"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button_myth2"
                    app:strokeColor="#F6F6F6"
                    app:strokeWidth="@dimen/_2sdp" />

                <Button
                    android:id="@+id/button_myth4"
                    android:layout_width="@dimen/_75sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="left|top"
                    android:text="Myth 4"
                    android:textColor="#FFFEFF"
                    android:textSize="@dimen/_10ssp"
                    app:backgroundTint="#627FC9"
                    app:cornerRadius="@dimen/_18sdp"
                    android:elevation="2dp"
                    app:layout_constraintEnd_toStartOf="@+id/myth"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button_myth3"
                    app:strokeColor="#F8F6FA"
                    app:strokeWidth="@dimen/_2sdp" />

                <Button
                    android:id="@+id/button_myth5"
                    android:layout_width="@dimen/_75sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="left|top"
                    android:text="Myth 5"
                    android:textColor="#FBFBFB"
                    android:textSize="@dimen/_10ssp"
                    app:backgroundTint="#73C1CD"
                    app:cornerRadius="@dimen/_18sdp"
                    android:elevation="2dp"
                    app:layout_constraintEnd_toStartOf="@+id/myth"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button_myth4"
                    app:strokeColor="#F3F1F6"
                    app:strokeWidth="@dimen/_2sdp" />

                <Button
                    android:id="@+id/button_myth6"
                    android:layout_width="@dimen/_75sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="left|top"
                    android:text="Myth 6"
                    android:textColor="#F8F7FA"
                    android:textSize="@dimen/_10ssp"
                    app:backgroundTint="#81CC98"
                    app:cornerRadius="@dimen/_18sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/myth"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button_myth5"
                    app:layout_constraintVertical_bias="0.0"
                    app:strokeColor="#FAFAFB"
                    app:strokeWidth="@dimen/_2sdp" />

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/myth"
                    android:layout_width="@dimen/_185sdp"
                    android:layout_height="@dimen/_250sdp"
                    android:paddingRight="0dp"
                    android:scaleX="2.1"
                    android:scaleY="2.3"
                    android:src="@drawable/gif_myth1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.608"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>