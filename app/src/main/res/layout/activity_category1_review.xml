<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lb_bcg2"
    android:scaleY="1.1"
    tools:context=".views.quiz.reportWithReview.Category1ReviewActivity">

    <ScrollView
        android:id="@+id/scrollView6"
        android:layout_width="395dp"
        android:layout_height="661dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/reviewRecyclerView"
                android:layout_width="376dp"
                android:layout_height="372dp"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.518"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/children_img" />

            <ImageView
                android:id="@+id/children_img"
                android:layout_width="276dp"
                android:layout_height="226dp"
                android:layout_marginTop="48dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/report_img1" />

            <TextView
                android:id="@+id/revText1"
                android:layout_width="136dp"
                android:layout_height="97dp"
                android:fontFamily="@font/concert_one"
                android:gravity="center"
                android:text="@string/reviewText1"
                android:textColor="#1B1919"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/children_img"
                app:layout_constraintEnd_toEndOf="@+id/children_img"
                app:layout_constraintStart_toStartOf="@+id/children_img"
                app:layout_constraintTop_toTopOf="@+id/children_img"
                app:layout_constraintVertical_bias="0.736" />

            <Button
                android:id="@+id/backMainQuiz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="62dp"
                android:layout_marginTop="108dp"
                android:fontFamily="@font/concert_one"
                android:text="back to main quiz"
                android:textSize="16sp"
                app:cornerRadius="7dp"
                app:layout_constraintStart_toStartOf="@+id/callout"
                app:layout_constraintTop_toTopOf="@+id/callout" />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/imageView8"
                android:layout_width="189dp"
                android:layout_height="196dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="216dp"
                android:scaleY="1.2"
                android:src="@drawable/clap"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/reviewRecyclerView" />

            <ImageView
                android:id="@+id/callout"
                android:layout_width="258dp"
                android:layout_height="93dp"
                android:layout_marginStart="130dp"
                android:layout_marginTop="10dp"
                android:rotation="2"
                android:scaleX="1.7"
                android:scaleY="1.3"
                app:layout_constraintStart_toStartOf="@+id/imageView8"
                app:layout_constraintTop_toBottomOf="@+id/reviewRecyclerView"
                app:srcCompat="@drawable/callout2" />

            <TextView
                android:id="@+id/apprText"
                android:layout_width="189dp"
                android:layout_height="31dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/concert_one"
                android:text="@string/reviewText2"
                android:textColor="#2B2828"
                app:layout_constraintEnd_toEndOf="@+id/callout"
                app:layout_constraintHorizontal_bias="0.855"
                app:layout_constraintStart_toStartOf="@+id/callout"
                app:layout_constraintTop_toTopOf="@+id/callout" />

            <TextView
                android:id="@+id/apprText2"
                android:layout_width="161dp"
                android:layout_height="60dp"
                android:layout_marginTop="23dp"
                android:fontFamily="@font/concert_one"
                android:gravity="center"
                android:text="@string/reviewText3"
                android:textColor="#2B2828"
                app:layout_constraintEnd_toEndOf="@+id/callout"
                app:layout_constraintHorizontal_bias="0.608"
                app:layout_constraintStart_toStartOf="@+id/callout"
                app:layout_constraintTop_toTopOf="@+id/callout" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>