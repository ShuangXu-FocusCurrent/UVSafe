<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.quiz.reportWithReview.ReportActivity">

    <Button
        android:id="@+id/backMainQuiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Back to main quiz"
        app:layout_constraintEnd_toEndOf="@+id/c4Review"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="@+id/c2Review"
        app:layout_constraintTop_toBottomOf="@+id/c4Review" />

    <Button
        android:id="@+id/c1Review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Category1"
        app:layout_constraintBottom_toTopOf="@+id/c2Review"
        app:layout_constraintEnd_toStartOf="@+id/c3Review"
        app:layout_constraintHorizontal_bias="0.824"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/c3Review"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/c3Review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="64dp"
        android:layout_marginRight="64dp"
        android:text="Category3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTotalWrong" />

    <Button
        android:id="@+id/c2Review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category2"
        app:layout_constraintBottom_toBottomOf="@+id/c4Review"
        app:layout_constraintEnd_toStartOf="@+id/c4Review"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/c1Review"
        app:layout_constraintTop_toTopOf="@+id/c4Review"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/c4Review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Category4"
        app:layout_constraintEnd_toEndOf="@+id/c3Review"
        app:layout_constraintTop_toBottomOf="@+id/c3Review" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toStartOf="@+id/textViewAttempt"
        app:layout_constraintTop_toBottomOf="@+id/textViewAttempt" />

    <TextView
        android:id="@+id/textViewAttempt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Total Attempted"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.164"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewCorrect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="Total Correct"
        app:layout_constraintStart_toStartOf="@+id/textViewAttempt"
        app:layout_constraintTop_toBottomOf="@+id/progressBar" />

    <TextView
        android:id="@+id/textViewQuestions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="Questions"
        app:layout_constraintBottom_toBottomOf="@+id/textViewAttempted"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textViewAttempted"
        app:layout_constraintTop_toTopOf="@+id/textViewAttempted"
        app:layout_constraintVertical_bias="0.0" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toStartOf="@+id/textViewCorrect"
        app:layout_constraintTop_toBottomOf="@+id/textViewCorrect" />

    <TextView
        android:id="@+id/textViewAttempted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="96dp"
        android:layout_marginLeft="96dp"
        android:layout_marginTop="4dp"
        android:text="Attempted"
        app:layout_constraintStart_toEndOf="@+id/textViewAttempt"
        app:layout_constraintTop_toBottomOf="@+id/textViewAttempt" />

    <TextView
        android:id="@+id/textViewTotalAttempted1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attempted"
        app:layout_constraintBottom_toBottomOf="@+id/textViewTotalCorrect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textViewTotalCorrect"
        app:layout_constraintTop_toTopOf="@+id/textViewTotalCorrect"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textViewTotalCorrect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="136dp"
        android:layout_marginLeft="136dp"
        android:layout_marginTop="4dp"
        android:text="Correct"
        app:layout_constraintStart_toEndOf="@+id/textViewCorrect"
        app:layout_constraintTop_toBottomOf="@+id/textViewCorrect" />

    <TextView
        android:id="@+id/textViewWrong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="Total Wrong"
        app:layout_constraintStart_toStartOf="@+id/textViewCorrect"
        app:layout_constraintTop_toBottomOf="@+id/progressBar2" />

    <ProgressBar
        android:id="@+id/progressBar3"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toStartOf="@+id/textViewWrong"
        app:layout_constraintTop_toBottomOf="@+id/textViewWrong" />

    <TextView
        android:id="@+id/textViewTotalWrong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="148dp"
        android:layout_marginLeft="148dp"
        android:layout_marginTop="4dp"
        android:text="Wrong"
        app:layout_constraintStart_toEndOf="@+id/textViewWrong"
        app:layout_constraintTop_toBottomOf="@+id/textViewWrong" />

    <TextView
        android:id="@+id/textViewTotalAttempted2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attempted"
        app:layout_constraintBottom_toBottomOf="@+id/textViewTotalWrong"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textViewTotalWrong"
        app:layout_constraintTop_toTopOf="@+id/textViewTotalWrong"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>