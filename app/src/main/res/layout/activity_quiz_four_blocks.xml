<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lb_bcg2"
    android:scaleY="1.1"
    tools:context=".views.quiz.QuizFourBlocksActivity">

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:scaleX="2.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/lb_bcg_newuser" />

    <ImageView
        android:id="@+id/home_boy"
        android:layout_width="@dimen/_110sdp"
        android:layout_height="@dimen/_123sdp"
        android:layout_marginStart="@dimen/_234sdp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="@dimen/_1sdp"
        android:scaleX="1.05"
        android:scaleY="1.35"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.436"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/quiz_boy_child" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintlayoutGrid"
        android:layout_width="@dimen/_204sdp"
        android:layout_height="@dimen/_200sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/category1"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:scaleX="1.15"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/category4"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/c1" />

        <ImageView
            android:id="@+id/category4"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:scaleX="1.15"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/category1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/c2" />

        <ImageView
            android:id="@+id/category2"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:scaleX="1.15"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintEnd_toStartOf="@+id/category4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/category1"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/c3" />

        <ImageView
            android:id="@+id/category3"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:scaleX="1.15"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/category4"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/c4" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/home_text"
        android:layout_width="@dimen/_175sdp"
        android:layout_height="@dimen/_83sdp"
        android:layout_marginStart="@dimen/_17sdp"
        android:fontFamily="@font/concert_one"
        android:gravity="center"
        android:text="Click on each tile to find the hidden Quiz"
        android:textColor="#614D4D"
        android:textSize="@dimen/_20ssp"
        app:layout_constraintEnd_toEndOf="@+id/imageView9"
        app:layout_constraintHorizontal_bias="0.326"
        app:layout_constraintStart_toStartOf="@+id/imageView9"
        app:layout_constraintTop_toTopOf="@+id/imageView9" />

    <Button
        android:id="@+id/leaderboard_btn_stroke"
        android:layout_width="@dimen/_210sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginStart="125dp"
        android:layout_marginTop="@dimen/_1sdp"
        android:layout_marginEnd="125dp"
        android:text="Check Leaderboard"
        android:visibility="visible"
        app:backgroundTint="#FFFFFF"
        app:cornerRadius="27dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintlayoutGrid"
        app:strokeColor="#FFA915"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/try_again_btn_stroke"
        android:layout_width="@dimen/_130sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginStart="@dimen/_110sdp"
        android:layout_marginTop="@dimen/_1sdp"
        android:layout_marginEnd="@dimen/_110sdp"
        android:text="Check Leaderboard"
        android:visibility="visible"
        app:backgroundTint="#FFFFFF"
        app:cornerRadius="27dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/leaderboard_btn_stroke"
        app:strokeColor="#FFA915"
        app:strokeWidth="0dp" />

    <Button
        android:id="@+id/checkLeaderboard"
        android:layout_width="@dimen/_206sdp"
        android:layout_height="@dimen/_41sdp"
        android:layout_marginStart="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginEnd="@dimen/_2sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        android:fontFamily="@font/concert_one"
        android:text="Check Leaderboard"
        android:textSize="16sp"
        android:visibility="visible"
        app:cornerRadius="27dp"
        app:layout_constraintBottom_toBottomOf="@+id/leaderboard_btn_stroke"
        app:layout_constraintEnd_toEndOf="@+id/leaderboard_btn_stroke"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/leaderboard_btn_stroke"
        app:layout_constraintTop_toTopOf="@+id/leaderboard_btn_stroke"
        app:layout_constraintVertical_bias="0.0" />

