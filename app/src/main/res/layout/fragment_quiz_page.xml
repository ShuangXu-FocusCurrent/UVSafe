<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.functionsFragment.QuizPageFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/buttonStartQuiz"
            android:layout_width="265dp"
            android:layout_height="62dp"
            android:fontFamily="@font/concert_one"
            android:text="Let's Get Started"
            android:textSize="20sp"
            android:enabled="false"
            app:backgroundTint="#BAFF1414"
            app:cornerRadius="27dp"
            app:layout_constraintBottom_toBottomOf="@+id/quiz_bcg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/quiz_bcg"
            app:layout_constraintVertical_bias="0.581" />

        <ImageView
            android:id="@+id/girlLogin"
            android:layout_width="412dp"
            android:layout_height="513dp"
            android:layout_marginBottom="88dp"
            android:contentDescription="ignore"
            android:scaleY="1.1"
            android:src="@drawable/quiz_login_girl_img"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.513" />

        <ImageView
            android:id="@+id/quiz_bcg"
            android:layout_width="fill_parent"
            android:layout_height="160dp"
            android:layout_marginTop="456dp"
            android:contentDescription="ignore"
            android:scaleX="1.5"
            android:src="@drawable/quiz_login_bcg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewHello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="72dp"
            android:fontFamily="@font/concert_one"
            android:text="Hello There .."
            android:textColor="#685E5E"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/girlLogin"
            app:layout_constraintHorizontal_bias="0.693"
            app:layout_constraintStart_toStartOf="@+id/girlLogin"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textHello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/concert_one"
            android:text="New to this quiz ?"
            android:textColor="#682929"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/textViewHello"
            app:layout_constraintStart_toStartOf="@+id/textViewHello"
            app:layout_constraintTop_toBottomOf="@+id/textViewHello" />

        <TextView
            android:id="@+id/textAddName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/concert_one"
            android:inputType="text"
            android:text="Tell me your nickname"
            android:textColor="#682929"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/textHello"
            app:layout_constraintStart_toStartOf="@+id/textHello"
            app:layout_constraintTop_toBottomOf="@+id/textHello" />

        <TextView
            android:id="@+id/textSelectName"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/concert_one"
            android:text="Already a player ? Select your name"
            android:textColor="#682929"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/textAddName"
            app:layout_constraintHorizontal_bias="0.488"
            app:layout_constraintStart_toStartOf="@+id/textAddName"
            app:layout_constraintTop_toBottomOf="@+id/editTextInputName" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextInputName"
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_width="145dp"
            android:layout_height="35dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/text_input_bcg"
            android:gravity="center|center_vertical"
            android:hint="Add a nickname"
            android:soundEffectsEnabled="true"
            android:textColor="#1C1B1B"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/btnConfirmAddUser"
            app:layout_constraintHorizontal_bias="0.657"
            app:layout_constraintStart_toStartOf="@+id/textAddName"
            app:layout_constraintTop_toBottomOf="@+id/textAddName" />

        <Spinner
            android:id="@+id/spinnerNamesDropdown"
            android:layout_width="145dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/text_input_bcg"
            android:dropDownWidth="match_parent"
            android:gravity="center|center_vertical"
            app:layout_constraintEnd_toEndOf="@+id/editTextInputName"
            app:layout_constraintStart_toStartOf="@+id/editTextInputName"
            app:layout_constraintTop_toBottomOf="@+id/textSelectName" />

        <Button
            android:id="@+id/btnConfirmAddUser"
            android:layout_width="96dp"
            android:layout_height="38dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:elevation="4dp"
            android:enabled="false"
            android:fontFamily="@font/concert_one"
            android:text="Confirm"
            app:backgroundTint="#FBBC05"
            app:cornerRadius="7dp"
            app:layout_constraintBottom_toBottomOf="@+id/editTextInputName"
            app:layout_constraintEnd_toEndOf="@+id/textAddName"
            app:layout_constraintStart_toEndOf="@+id/editTextInputName"
            app:layout_constraintTop_toTopOf="@+id/editTextInputName"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/btnConfirmSelectUser"
            android:layout_width="96dp"
            android:layout_height="38dp"
            android:elevation="4dp"
            android:enabled="false"
            android:fontFamily="@font/concert_one"
            android:text="Confirm"
            app:backgroundTint="#FBBC05"
            app:cornerRadius="7dp"
            app:layout_constraintBottom_toBottomOf="@+id/spinnerNamesDropdown"
            app:layout_constraintEnd_toEndOf="@+id/btnConfirmAddUser"
            app:layout_constraintStart_toStartOf="@+id/btnConfirmAddUser"
            app:layout_constraintTop_toTopOf="@+id/spinnerNamesDropdown" />

        <ImageView
            android:id="@+id/nameCallout"
            android:layout_width="205dp"
            android:layout_height="90dp"
            android:layout_marginBottom="40dp"
            android:scaleX="1.6"
            android:src="@drawable/callout_quiz"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/buttonStartQuiz"
            app:layout_constraintEnd_toEndOf="@+id/textViewHello"
            app:layout_constraintHorizontal_bias="0.515"
            app:layout_constraintStart_toStartOf="@+id/textViewHello"
            app:layout_constraintTop_toBottomOf="@+id/spinnerNamesDropdown"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:layout_marginLeft="56dp"
            android:fontFamily="@font/concert_one"
            android:text="Hi Harry"
            android:visibility="invisible"
            android:textColor="#682929"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/nameCallout"
            app:layout_constraintStart_toStartOf="@+id/nameCallout"
            app:layout_constraintTop_toTopOf="@+id/nameCallout"
            app:layout_constraintVertical_bias="0.58" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>