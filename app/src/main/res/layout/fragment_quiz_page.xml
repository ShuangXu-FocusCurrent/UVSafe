<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.functionsFragment.QuizPageFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/button"
            android:layout_width="265dp"
            android:layout_height="62dp"
            android:fontFamily="@font/concert_one"
            android:text="Let's Get Started"
            android:textSize="20sp"
            app:backgroundTint="#BAFF1414"
            app:cornerRadius="27dp"
            app:layout_constraintBottom_toBottomOf="@+id/quiz_bcg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/quiz_bcg"
            app:layout_constraintVertical_bias="0.581" />

        <ImageView
            android:id="@+id/girlLogin"
            android:layout_width="385dp"
            android:layout_height="552dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="152dp"
            android:contentDescription="ignore"
            android:scaleY="1.1"
            android:src="@drawable/quiz_login_girl_img"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/quiz_bcg"
            android:layout_width="fill_parent"
            android:layout_height="160dp"
            android:layout_marginTop="456dp"
            android:contentDescription="ignore"
            android:scaleX="1.5"
            android:src="@drawable/quiz_login_bcg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="396dp"
            android:fontFamily="@font/concert_one"
            android:text="Hello There .."
            android:textColor="#685E5E"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/quiz_bcg"
            app:layout_constraintEnd_toEndOf="@+id/girlLogin"
            app:layout_constraintHorizontal_bias="0.819"
            app:layout_constraintStart_toStartOf="@+id/girlLogin" />

        <TextView
            android:id="@+id/textHello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="52dp"
            android:fontFamily="@font/concert_one"
            android:text="New to here ?"
            android:textColor="#682929"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/girlLogin"
            app:layout_constraintTop_toBottomOf="@+id/textView1" />

        <TextView
            android:id="@+id/textAddName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/concert_one"
            android:text="Tell me your nick name"
            android:textColor="#682929"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/girlLogin"
            app:layout_constraintHorizontal_bias="0.871"
            app:layout_constraintStart_toStartOf="@+id/girlLogin"
            app:layout_constraintTop_toBottomOf="@+id/textHello" />

        <TextView
            android:id="@+id/textSelectName"
            android:layout_width="289dp"
            android:layout_height="25dp"
            android:layout_marginStart="112dp"
            android:layout_marginLeft="112dp"
            android:layout_marginBottom="192dp"
            android:fontFamily="@font/concert_one"
            android:text="Already In ? Select your nick name"
            android:textColor="#682929"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/quiz_bcg"
            app:layout_constraintStart_toStartOf="@+id/girlLogin" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputName"
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_width="145dp"
            android:layout_height="35dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="120dp"
            android:layout_marginRight="120dp"
            android:background="@drawable/text_input_bcg"
            android:gravity="center|center_vertical"
            android:hint="  Add Name"
            android:soundEffectsEnabled="true"
            android:textColor="#1C1B1B"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/girlLogin"
            app:layout_constraintTop_toBottomOf="@+id/textAddName" />

        <Button
            android:id="@+id/btnConfirm1"
            android:layout_width="96dp"
            android:layout_height="37dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:elevation="4dp"
            android:fontFamily="@font/concert_one"
            android:text="Confirm"
            app:backgroundTint="#FBBC05"
            app:cornerRadius="7dp"
            app:layout_constraintBottom_toBottomOf="@+id/inputName"
            app:layout_constraintStart_toEndOf="@+id/inputName"
            app:layout_constraintTop_toTopOf="@+id/inputName"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="96dp"
            android:layout_height="37dp"
            android:layout_marginTop="44dp"
            android:elevation="4dp"
            android:fontFamily="@font/concert_one"
            android:text="Confirm"
            app:backgroundTint="#FBBC05"
            app:cornerRadius="7dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.691"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/namesDropdown" />

        <Spinner
            android:id="@+id/namesDropdown"
            android:layout_width="126dp"
            android:layout_height="35dp"
            android:layout_marginStart="184dp"
            android:layout_marginLeft="184dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/text_input_bcg"
            app:layout_constraintStart_toStartOf="@+id/girlLogin"
            app:layout_constraintTop_toBottomOf="@+id/textSelectName" />

        <ImageView
            android:id="@+id/nameCallout"
            android:layout_width="205dp"
            android:layout_height="90dp"
            android:layout_marginEnd="64dp"
            android:layout_marginRight="64dp"
            android:scaleX="1.6"
            android:src="@drawable/callout_quiz"
            app:layout_constraintBottom_toTopOf="@+id/button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnConfirm"
            app:layout_constraintVertical_bias="0.36" />

        <TextView
            android:id="@+id/textUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:layout_marginLeft="56dp"
            android:fontFamily="@font/concert_one"
            android:text="Hi Harry"
            android:textColor="#682929"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/nameCallout"
            app:layout_constraintStart_toStartOf="@+id/nameCallout"
            app:layout_constraintTop_toTopOf="@+id/nameCallout"
            app:layout_constraintVertical_bias="0.58" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>