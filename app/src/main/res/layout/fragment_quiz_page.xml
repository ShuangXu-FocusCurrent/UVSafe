<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.functionsFragment.QuizPageFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="396dp"
            android:layout_height="501dp"
            android:rotation="180"
            android:scaleX="1.4"
            android:scaleY="1.2"
            android:src="@drawable/lb_bcg1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/buttonStartQuiz"
            android:layout_width="265dp"
            android:layout_height="62dp"
            android:layout_marginBottom="64dp"
            android:elevation="4dp"
            android:enabled="false"
            android:fontFamily="@font/concert_one"
            android:text="Let's Get Started"
            android:textSize="20sp"
            app:backgroundTint="#F8852E"
            app:cornerRadius="27dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/bcg_ext_user"
            app:layout_constraintHorizontal_bias="0.484"
            app:layout_constraintStart_toStartOf="@+id/bcg_ext_user"
            app:layout_constraintTop_toBottomOf="@+id/bcg_ext_user"
            app:layout_constraintVertical_bias="0.757"
            app:strokeColor="@color/yellow_500"
            app:strokeWidth="4dp" />

        <ImageView
            android:id="@+id/bcg_new_user"
            android:layout_width="364dp"
            android:layout_height="137dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/quiz_login_bcg_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.551"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewHello" />

        <ImageView
            android:id="@+id/bcg_ext_user"
            android:layout_width="364dp"
            android:layout_height="137dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/quiz_login_bcg_2"
            app:layout_constraintEnd_toEndOf="@+id/bcg_new_user"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/bcg_new_user"
            app:layout_constraintTop_toBottomOf="@+id/bcg_new_user" />

        <TextView
            android:id="@+id/textViewHello"
            android:layout_width="212dp"
            android:layout_height="140dp"
            android:layout_marginStart="192dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/concert_one"
            android:gravity="center|top"
            android:text="It's Quiz Time"
            android:textColor="#685E5E"
            android:textSize="40sp"
            app:layout_constraintStart_toStartOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textHello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/concert_one"
            android:text="New to this quiz ?"
            android:textColor="#453F3F"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/bcg_new_user"
            app:layout_constraintHorizontal_bias="0.07"
            app:layout_constraintStart_toStartOf="@+id/bcg_new_user"
            app:layout_constraintTop_toTopOf="@+id/bcg_new_user" />

        <TextView
            android:id="@+id/textAddName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="216dp"
            android:fontFamily="@font/concert_one"
            android:inputType="text"
            android:text="Add a nickname"
            android:textColor="#453F3F"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/textHello"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textHello"
            app:layout_constraintTop_toBottomOf="@+id/textHello" />

        <TextView
            android:id="@+id/textAddName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="216dp"
            android:fontFamily="@font/concert_one"
            android:inputType="text"
            android:text="Select your nickname"
            android:textColor="#453F3F"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/textSelectName"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textSelectName"
            app:layout_constraintTop_toBottomOf="@+id/textSelectName" />

        <TextView
            android:id="@+id/textSelectName"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/concert_one"
            android:text="Already a player ? "
            android:textColor="#453F3F"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/bcg_ext_user"
            app:layout_constraintHorizontal_bias="0.071"
            app:layout_constraintStart_toStartOf="@+id/bcg_ext_user"
            app:layout_constraintTop_toTopOf="@+id/bcg_ext_user" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextInputName"
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_width="145dp"
            android:layout_height="35dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/text_input_bcg"
            android:gravity="center|center_vertical"
            android:hint="Add a nickname"
            android:soundEffectsEnabled="true"
            android:textColor="#453F3F"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/btnConfirmAddUser"
            app:layout_constraintEnd_toEndOf="@+id/textAddName"
            app:layout_constraintStart_toStartOf="@+id/textAddName"
            app:layout_constraintTop_toBottomOf="@+id/textAddName" />

        <Spinner
            android:id="@+id/spinnerNamesDropdown"
            android:layout_width="170dp"
            android:layout_height="36dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/text_input_bcg"
            android:dropDownWidth="match_parent"
            android:gravity="center|center_vertical"
            app:layout_constraintBottom_toBottomOf="@+id/btnConfirmSelectUser"
            app:layout_constraintEnd_toEndOf="@+id/textAddName2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textAddName2"
            app:layout_constraintTop_toBottomOf="@+id/textAddName2" />

        <Button
            android:id="@+id/btnConfirmAddUser"
            android:layout_width="96dp"
            android:layout_height="38dp"
            android:layout_marginStart="96dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:enabled="false"
            android:fontFamily="@font/concert_one"
            android:text="Confirm"
            app:backgroundTint="#1992EA"
            app:cornerRadius="7dp"
            app:layout_constraintBottom_toBottomOf="@+id/bcg_new_user"
            app:layout_constraintStart_toEndOf="@+id/editTextInputName" />

        <Button
            android:id="@+id/btnConfirmSelectUser"
            android:layout_width="96dp"
            android:layout_height="38dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:enabled="false"
            android:fontFamily="@font/concert_one"
            android:text="Confirm"
            app:backgroundTint="#08C28B"
            app:cornerRadius="7dp"
            app:layout_constraintBottom_toBottomOf="@+id/bcg_ext_user"
            app:layout_constraintEnd_toEndOf="@+id/btnConfirmAddUser"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/btnConfirmAddUser" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="232dp"
            android:layout_height="195dp"
            android:layout_marginStart="4dp"
            android:rotation="2"
            android:rotationY="195"
            android:src="@drawable/quiz_child"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="79dp"
            android:layout_height="73dp"
            android:layout_marginTop="92dp"
            android:scaleY="1.2"
            android:src="@drawable/quiz_img_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.592"
            app:layout_constraintStart_toStartOf="@+id/textViewHello"
            app:layout_constraintTop_toTopOf="@+id/textViewHello" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>