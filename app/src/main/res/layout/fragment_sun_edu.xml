<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.functionsFragment.SunEduFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/skin_edu_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/edu_page_background">

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:padding="20dp"
                android:rowCount="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_columnSpan="2"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:background="@drawable/edu_page_header_text"
                    android:gravity="center" />

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/about_us"
                    android:gravity="center"
                    android:id="@+id/aboutUVButton" />

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/sun_protection"
                    android:gravity="center"
                    android:id="@+id/sunProtectionButton" />

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/about_sunscreen"
                    android:gravity="center"
                    android:id="@+id/aboutSunscreenButton" />

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/about_melanoma"
                    android:gravity="center"
                    android:visibility="invisible"
                    android:id="@+id/aboutMelanomaButton" />

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/melanoma_risk_factors"
                    android:gravity="center"
                    android:visibility="invisible"
                    android:id="@+id/melanomaRisksButton"/>

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/melanoma_stats"
                    android:gravity="center"
                    android:visibility="invisible"
                    android:id="@+id/melanomaStatsButton" />

            </GridLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>