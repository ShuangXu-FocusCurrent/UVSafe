<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lb_bcg1"
    tools:context=".views.quiz.leaderboard.ClearLeaderboardActivity">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="314dp"
        android:layout_height="414dp"
        android:layout_marginTop="76dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.253"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bcg"
        app:srcCompat="@drawable/kid_thinking" />

    <Button
        android:id="@+id/btnCancelClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/concert_one"
        android:text="Cancel Clear"
        android:textSize="16sp"
        app:backgroundTint="#FA8241"
        app:layout_constraintStart_toStartOf="@+id/bcg"
        app:layout_constraintTop_toBottomOf="@+id/bcg" />

    <Button
        android:id="@+id/btnClearLeaderboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/concert_one"
        android:text="Confirm delete"
        android:textSize="16sp"
        app:backgroundTint="#FA8241"
        app:layout_constraintBottom_toBottomOf="@+id/btnCancelClear"
        app:layout_constraintEnd_toEndOf="@+id/bcg"
        app:layout_constraintHorizontal_bias="0.611"
        app:layout_constraintStart_toEndOf="@+id/btnCancelClear"
        app:layout_constraintTop_toBottomOf="@+id/bcg"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/bcg"
        android:layout_width="368dp"
        android:layout_height="200dp"
        android:layout_marginTop="36dp"
        android:scaleY="1.2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/delete_lb" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="78dp"
        android:layout_height="67dp"
        android:layout_marginEnd="288dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/bcg"
        app:layout_constraintTop_toTopOf="@+id/bcg"
        app:srcCompat="@drawable/warning" />

    <TextView
        android:id="@+id/del_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/concert_one"
        android:text="Are you sure ?"
        android:textColor="#575555"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="@+id/bcg"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toEndOf="@+id/imageView11"
        app:layout_constraintTop_toTopOf="@+id/bcg" />

    <TextView
        android:id="@+id/del_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/concert_one"
        android:text="Do you want to clear the Leaderboard?"
        android:textColor="#575555"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/bcg"
        app:layout_constraintStart_toStartOf="@+id/bcg"
        app:layout_constraintTop_toBottomOf="@+id/imageView11" />

    <TextView
        android:id="@+id/del_text3"
        android:layout_width="347dp"
        android:layout_height="67dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/concert_one"
        android:gravity="center"
        android:text="@string/clear_lb"
        android:textColor="#575555"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/del_text2"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="@+id/del_text2"
        app:layout_constraintTop_toBottomOf="@+id/del_text2" />

</androidx.constraintlayout.widget.ConstraintLayout>