<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.functionsFragment.QuizPageFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="@dimen/_600sdp"
            android:layout_height="@dimen/_400sdp"
            android:layout_marginTop="@dimen/_100sdp"
            android:rotation="180"
            android:scaleX="2"
            android:scaleY="1.2"
            android:src="@drawable/lb_bcg1"
            app:layout_constraintEnd_toEndOf="@+id/constraintLayoutNewUser"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayoutNewUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.44">

            <ImageView
                android:id="@+id/bcg_new_user"
                android:layout_width="@dimen/_260sdp"
                android:layout_height="@dimen/_94sdp"
                android:src="@drawable/quiz_login_bcg_1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textHello"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/concert_one"
                android:text="New to this quiz ?"
                android:textColor="#453F3F"
                android:textSize="@dimen/_15ssp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textAddName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/concert_one"
                android:inputType="text"
                android:text="Add a nickname"
                android:textColor="#453F3F"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textHello" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextInputName"
                style="@style/TextAppearance.AppCompat.Body2"
                android:layout_width="@dimen/_115sdp"
                android:layout_height="@dimen/_27sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/text_input_bcg"
                android:gravity="center|center_vertical"
                android:hint="Add a nickname"
                android:soundEffectsEnabled="true"
                android:textColor="#453F3F"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textAddName"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/btnConfirmAddUser"
                android:layout_width="@dimen/_77sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:elevation="4dp"
                android:enabled="false"
                android:fontFamily="@font/concert_one"
                android:text="Confirm"
                android:textSize="@dimen/_10ssp"
                app:backgroundTint="#1992EA"
                app:cornerRadius="@dimen/_4sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.75"
                app:layout_constraintStart_toEndOf="@id/editTextInputName"
                app:layout_constraintTop_toBottomOf="@id/textAddName"
                app:layout_constraintVertical_bias="0.0" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayoutExistUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/constraintLayoutNewUser"
            app:layout_constraintVertical_bias="0.0">

            <ImageView
                android:id="@+id/bcg_ext_user"
                android:layout_width="@dimen/_260sdp"
                android:layout_height="@dimen/_94sdp"
                android:src="@drawable/quiz_login_bcg_2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textSelectName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/concert_one"
                android:text="Already a player ? "
                android:textColor="#453F3F"
                android:textSize="@dimen/_15ssp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textAddName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/concert_one"
                android:inputType="text"
                android:text="Select your nickname"
                android:textColor="#453F3F"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textSelectName" />

            <Spinner
                android:id="@+id/spinnerNamesDropdown"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_27sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/text_input_bcg"
                android:dropDownWidth="match_parent"
                android:gravity="center|center_vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textAddName2"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/btnConfirmSelectUser"
                android:layout_width="@dimen/_77sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:elevation="4dp"
                android:enabled="false"
                android:fontFamily="@font/concert_one"
                android:text="Confirm"
                android:textSize="@dimen/_10ssp"
                app:backgroundTint="#08C28B"
                app:cornerRadius="@dimen/_5sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.65"
                app:layout_constraintStart_toEndOf="@id/spinnerNamesDropdown"
                app:layout_constraintTop_toBottomOf="@id/textAddName2"
                app:layout_constraintVertical_bias="0.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/textViewHello"
            android:layout_width="@dimen/_135sdp"
            android:layout_height="@dimen/_110sdp"
            android:layout_marginStart="@dimen/_110sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/concert_one"
            android:gravity="center|top"
            android:text="It's Quiz Time"
            android:textColor="#685E5E"
            android:textSize="@dimen/_30ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="@dimen/_180sdp"
            android:layout_height="@dimen/_150sdp"
            android:rotation="2"
            android:rotationY="195"
            android:src="@drawable/quiz_child"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/imageViewGif"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_75sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:scaleY="1.2"
            android:src="@drawable/quiz_img_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/textViewHello"
            app:layout_constraintTop_toTopOf="@+id/textViewHello" />

        <Button
            android:id="@+id/buttonStartQuiz"
            android:layout_width="@dimen/_215sdp"
            android:layout_height="@dimen/_45sdp"
            android:elevation="4dp"
            android:enabled="false"
            android:fontFamily="@font/concert_one"
            android:text="Let's Get Started"
            android:textSize="@dimen/_15ssp"
            app:backgroundTint="#F8852E"
            app:cornerRadius="@dimen/_23sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/constraintLayoutExistUser"
            app:layout_constraintVertical_bias="0.70"
            app:strokeColor="@color/yellow_500"
            app:strokeWidth="@dimen/_2sdp" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>