<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.functionsFragment.SunEduFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/skin_edu_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/edu_page_background">

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:padding="20dp"
                android:rowCount="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_columnSpan="2"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:background="@drawable/edu_page_header_text"
                    android:gravity="center" />

                <ImageButton
                    android:id="@+id/aboutUVButton"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_90sdp"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_24sdp"
                    android:background="@drawable/about_us"
                    android:gravity="center" />

                <ImageButton
                    android:id="@+id/sunProtectionButton"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_90sdp"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_24sdp"
                    android:background="@drawable/sun_protection"
                    android:gravity="center" />

                <ImageButton
                    android:id="@+id/aboutSunscreenButton"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_90sdp"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_24sdp"
                    android:background="@drawable/about_sunscreen"
                    android:gravity="center" />

                <ImageButton
                    android:id="@+id/aboutMelanomaButton"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_90sdp"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_24sdp"
                    android:background="@drawable/about_melanoma"
                    android:gravity="center"
                    android:visibility="visible" />

                <ImageButton
                    android:id="@+id/melanomaRisksButton"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_90sdp"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:background="@drawable/melanoma_risk_factors"
                    android:gravity="center"
                    android:visibility="visible" />

                <ImageButton
                    android:id="@+id/melanomaStatsButton"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_90sdp"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:background="@drawable/melanoma_stats"
                    android:gravity="center"
                    android:visibility="visible" />

            </GridLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>